{
    "extends": [
        "airbnb",
        "airbnb/hooks",
        "airbnb-typescript",
        "plugin:@typescript-eslint/recommended-type-checked", // @typescript-eslint @v6
        "plugin:@typescript-eslint/stylistic-type-checked" // @typescript-eslint @v6
    ],
    "parserOptions": {
        "project": "./tsconfig.json",
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ]
    },
    "overrides": [
    {
        "files": ["types.d.ts"],
        "rules": {
            "@typescript-eslint/naming-convention": "off"
        }
    }
]
}